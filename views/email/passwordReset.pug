extends baseEmail

block content
    p Hi #{firstName},
        p Forot your Password? Submit a PATCH request with your new Password and PasswordConfirm to: #{url}. 
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Your Password 
        p If you didn't Forget your password, then please ignore this email!